[user]
    name = restrry
    email = restrry@gmail.com
[core]
    excludesfile = ~/.gitignore
    editor = code --wait
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    ff = no
[diff]
    noprefix = true
[alias]
    cp = cherry-pick
    cl = clone
    ci = commit
    co = checkout
    br = branch
    dc = diff --cached
    st = status -sb
    unstage = reset HEAD --
    last = log -1 HEAD
    lg  = log --oneline --graph --decorate --all
    lgg="log --pretty=oneline -n 20 --graph --abbrev-commit"
    hi = log --oneline --graph --decorate --all --simplify-by-decoration

    diff = diff --no-index

    ac="!git add -A && git commit -av"
    reb="!r() { rebase -i HEAD~$1; }; r"

    pr = "!f() { git fetch -fu origin refs/pull/$1/head:pr/$1; } ; f"

    # Find commits by source code
    fc="!f() { log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"
    # Find commits by commit message
    fm="!f() { log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"


