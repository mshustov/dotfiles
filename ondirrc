enter ~/work/*
   export GIT_AUTHOR_NAME=restrry
   export GIT_AUTHOR_EMAIL=restrry@yandex-team.ru
   export GIT_COMMITTER_NAME=Mikhail Shustov
   export GIT_COMMITTER_EMAIL=restrry@yandex-team.ru
   export GITHUB_HOST=github.yandex-team.ru
   export NPM_CONFIG_REGISTRY=http://npm.yandex-team.ru
   echo -e 'Git and NPM switched to \033[0;31mYandex'

leave ~/work/*
   gitDefault
   NPMDefault
   echo -e 'Git and NPM switched to \033[0;32mdefault'
